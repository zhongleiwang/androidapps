<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Name"
       android:gravity="center"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <TextView
       android:id="@+id/offer_dialog_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="name"
       android:gravity="center"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

  </LinearLayout>

  <TextView
      android:id="@+id/offer_dialog_uid"
     android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:text="uid"
      android:visibility="invisible"
      tools:text="" />

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text=""
       android:layout_weight="2"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From"
       android:layout_weight="4"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="To"
       android:layout_weight="4"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Currency"
       android:layout_weight="2"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_from"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_to"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Amount"
       android:layout_weight="2"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_from_amount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_to_amount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Method"
       android:layout_weight="2"
       android:textStyle="bold"
       android:textSize="20sp"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_from_amount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

    <EditText
       android:id="@+id/offer_dialog_to_amount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="4"
       android:textSize="18sp"
       android:inputType="text"
       tools:text="" />

  </LinearLayout>

</LinearLayout>
